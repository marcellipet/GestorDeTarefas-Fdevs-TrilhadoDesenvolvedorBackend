    .label {
        display: block;
        font-size: 16px;
        color: #7e6651;
        margin-bottom: 5px;
    }

    .input {
        width: 95%;
        padding: 10px;
        border-radius: 8px;
        border: 2px solid #ab8c74;
        margin-bottom: 15px;
        font-size: 15px;
    }

    .textarea {
        height: 100px;
        resize: vertical;
    }

    .botoes {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    .botao {
        padding: 8px 20px;
        border-radius: 8px;
        font-weight: bold;
        border: 2px solid #b49982;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .botao-salvar {
        background-color: #ffd2d4;
        color: #7e6651;
    }

        .botao-salvar:hover {
            background-color: #fbb3b6;
            border-color: #7e614a;
        }

    .botao-cancelar {
        background-color: #f6e2b3;
        color: #7e614a;
    }

        .botao-cancelar:hover {
            background-color: #f1c79b;
            border-color: #7e614a;
        }

    .menu li a.ativo {
        background-color: #ff8daa;
        color: #fff;
        padding: 5px 15px;
        border-radius: 8px;
    }
</style>

    <meta charset="UTF-8">
    <title>Emoji Sorvete Fofinho</title>

    <!-- Vanilla Tilt -->
    <script src="https://cdn.jsdelivr.net/npm/vanilla-tilt@1.7.2/dist/vanilla-tilt.min.js"></script>

    <!-- tsParticles -->
    <script src="https://cdn.jsdelivr.net/npm/tsparticles@2.11.0/tsparticles.bundle.min.js"></script>

    <!-- Anime.js -->
    <script src="https://cdn.jsdelivr.net/npm/animejs@3.2.1/lib/anime.min.js"></script>

    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: #fffaf0;
            overflow: hidden;
            margin: 0;
        }

        .fofa-container {
            position: relative;
            width: 200px;
            height: 200px;
        }

        .fofa-img {
            width: 100%;
            height: 100%;
            cursor: pointer;
            border-radius: 50%;
            box-shadow: 0 0 20px rgba(255,182,193,0.5); 
            transition: box-shadow 0.3s;
        }

            .fofa-img:hover {
                box-shadow: 0 0 40px rgba(255,182,193,0.8);
            }

        #particles-js {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }
    </style>

    <div class="fofa-container">
        <div id="particles-js"></div>
    <img src="https://media4.giphy.com/media/v1.Y2lkPTc5MGI3NjExYmthbXh1OWJqc2JnZ3gyOW9ncG04a2J6dDRrdXBuOGQ3NGhzaHlheCZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/dvoJndd3M2EBq/giphy.gif" class="fofa-img tilt" data-tilt data-tilt-max="15" data-tilt-speed="400">
    </div>


    <script>
        VanillaTilt.init(document.querySelectorAll(".tilt"));

        anime({
            targets: '.fofa-img',
            scale: [1, 1.05],
            direction: 'alternate',
            loop: true,
            easing: 'easeInOutSine',
            duration: 1500
        });
        tsParticles.load("particles-js", {
            particles: {
                number: { value: 0 },
                shape: { type: ["heart", "star"] },
                size: { value: { min: 5, max: 12 } },
                color: { value: ["#ff69b4", "#ffff99"] },
                move: { direction: "top", speed: 2, outModes: "destroy" },
                opacity: { value: 0.8 },
            },
            interactivity: {
                events: {
                    onHover: { enable: true, mode: "emit" },
                },
                modes: {
                    emit: { quantity: 3 }
                }
            },
            detectRetina: true
        });
    </script>


@model GestorTarefas.Models.Tarefa

<h2>Excluir Tarefa</h2>

<p>Tem certeza que deseja excluir esta tarefa?</p>

<div>
    <strong>@Model.Titulo</strong> <br />
    <small>@Model.DataCriacao</small>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Excluir</button>
    <a href="/Tarefas" class="btn btn-secondary mt-3">Cancelar</a>
</form>
